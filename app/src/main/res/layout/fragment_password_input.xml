<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer un mot de passe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saisis le mot de passe"
        android:inputType="textPassword"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• 8 caractères minimum\n• 1 lettre, 1 chiffre, 1 caractère spécial (# ? ! @)"
        android:layout_marginTop="16dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_password_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Continuer"
        android:backgroundTint="#FF6F91"
        android:textColor="#FFFFFF" />

</LinearLayout>
