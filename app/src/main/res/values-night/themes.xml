<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Thème personnalisé pour le mode nuit avec un fond rouge -->
    <style name="Theme.KitKat.NightRed" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Couleur principale (arrière-plan) -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Couleur secondaire (par exemple pour les boutons et éléments interactifs) -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/red</item>

        <!-- Couleur de la barre de statut -->
        <item name="android:statusBarColor">@color/red</item>
        <item name="android:windowBackground">@color/red</item>
    </style>
</resources>


